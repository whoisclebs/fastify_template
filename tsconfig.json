{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": "src",
		"lib": ["esnext"],
		"target": "esnext",
		"module": "CommonJS",
		"sourceMap": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@/tests/*": ["../tests/*"]
		}
	},
	"exclude": ["dist", "node_modules"],
	"include": ["src/**/*"]
}
